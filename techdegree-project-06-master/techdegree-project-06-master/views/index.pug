extends layout.pug

mixin projectCard(project)
  .cell
    a(href= `projects/${project.id}`)
      img.thumbnail(src= `/static/images/${project["image_urls"][0]}`)
      h5 #{project['project-name']}
      
block content 
  article.grid-container.portfolio-intro
    div

      
      h1 The portfolio you have been looking for!

      
      p.lead.text-light
        | Trust me this portfolio will be worth your while! Enjoy my awesome projects while you're at it!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        +projectCard(project)
      
